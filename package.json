{
  "name": "bonnie",
  "displayName": "Bonnie - Behave BDD Extension",
  "description": "Intelligent tooling for Python Behave BDD development with Gherkin feature files and step definitions",
  "version": "0.0.1",
  "publisher": "maximinus",
  "author": {
    "name": "maximinus"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/maximinus/bonnie"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Testing",
    "Snippets",
    "Formatters",
    "Debuggers"
  ],
  "keywords": [
    "behave",
    "bdd",
    "gherkin",
    "cucumber",
    "testing",
    "python"
  ],
  "activationEvents": [
    "onLanguage:feature",
    "workspaceContains:**/*.feature",
    "workspaceContains:behave.ini"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "feature",
        "aliases": [
          "Gherkin",
          "Feature",
          "Cucumber"
        ],
        "extensions": [
          ".feature"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "bonnie.runAllFeatures",
        "title": "Bonnie: Run All Features"
      },
      {
        "command": "bonnie.runCurrentFeature",
        "title": "Bonnie: Run Current Feature"
      },
      {
        "command": "bonnie.runScenarioUnderCursor",
        "title": "Bonnie: Run Scenario Under Cursor"
      }
    ],
    "configuration": {
      "title": "Bonnie",
      "properties": {
        "bonnie.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python interpreter (leave empty for auto-detection)"
        },
        "bonnie.behaveArgs": {
          "type": "array",
          "default": [],
          "description": "Additional arguments to pass to behave command",
          "items": {
            "type": "string"
          }
        },
        "bonnie.stepDefinitionPaths": {
          "type": "array",
          "default": [
            "features/steps",
            "steps"
          ],
          "description": "Paths to search for step definitions",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {}
}
